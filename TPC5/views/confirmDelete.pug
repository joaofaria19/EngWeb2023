extends layout 

block content 
    header.w3-container.w3-blue-gray
        h2 Do you want to delete this task? 
    table.w3-table.w3-table-all
        tr
            td
                b Limit Date: 
                span= task.date
        tr
            td
                b Who's going to do it: 
                span= task.who
        tr
            td
                b Task desecription: 
                span= task.what
        tr
            td
                b Task done: 
                span= task.done
    br
    .w3-container
        a(href="/tasks/confirm_delete/"+task.id style="margin-left:1%").w3-btn.w3-hover-light-gray.w3-red.w3-round-large.w3-large.w3-padding-large.w3-right Cancel
        a(href="/").w3-btn.w3-hover-light-gray.w3-blue-gray.w3-round-large.w3-large.w3-padding-large.w3-right Confirm
    br    
    footer.w3-container.w3-blue-grey
        address Gerado por aluno::a97652 em #{d} - [ #[a(href="/") Back ]]
        